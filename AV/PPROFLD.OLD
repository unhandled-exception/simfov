Procedure RecalcObjects;
var
 NSort        : Byte    ;
 Ind          : Integer ;
 Mplanet      : Double  ;
 dx, dy       : Double  ;
 DxSc, DySc   : Double  ;
 DxObj,DyObj  : Double  ;
Begin


 { ¥à¥¢®¤ ª®®à¤¨­ â ¢ íªà ­­ë¥  }

 With sw Do
   Begin

     Dx := ( x2 - x1 + 1 ) / 2.0 ;
     Dy := ( y2 - y1 + 1 ) / 2.0 ;

     DxSc := XOrient * GScale / XMax * Dx  ;
     DySc := YOrient * GScale / YMax * Dy  ;

   End ;


 If  ( Not Recalc )  Then
 Begin

 MvMinIzo :=  1000        ;
 MvMin    := MvMinParam   ;

 MvMaxIzo := -1000        ;
 MvMax    := MvMaxParam   ;



  For NSort := 1 To CatMax Do

    Begin

      IFirst := IndCat [ NSort ].NBEG ;
      ILast  := IndCat [ NSort ].NEND ;

      If  ( ILast >= IFirst )  Then

        Begin

          For Ind := IFirst To ILast  Do
            With  Objectptr [ Ind Div Objectblocksize ] ^
                            [ Ind Mod Objectblocksize ]   Do
              Begin

                DxObj := ( X - CenterX ) * DxSc ;
                DyObj := ( Y - CenterY ) * DySc ;

                X  :=  Dx + DxObj ;
                Y  :=  Dy - DyObj ;

                If (      ( Abs ( DyObj ) <= Dy )
                     And  ( Abs ( DxObj ) <= Dx ) )  Then
                  Begin  { ‚ ¯®«¥ §p¥­¨ï }
                         { ------------- }

                    NRecC := Abs ( NRecC ) ;


                    If ( M > MvMaxIzo )
                       Then  MvMaxIzo := M ;

                    If ( M < MvMinIzo )
                       Then  MvMinIzo := M ;

                  End  { ‚ ¯®«¥ §p¥­¨ï }
                       { ------------- }
                 Else

                    NRecC := - Abs ( NRecC ) ;

              End ;
{
          If ( SortStarsInFild ) Then
            Begin
              ShellX ( IFirst , ILast ) ;
              CatSort [ NSort ] := True ;
            End ;
}
        End ;

    End ;

 End ;

      { « ­¥âë }
      { ======= }

 If ( Not ReCalcPlanets ) Then
 Begin
   For Ind:=1 To MaxPlanets Do
    If Planet[Ind].Visible Then
      With  Planet[Ind] Do
        Begin

          x  :=  Dx + ( X - CenterX ) * DxSc ;
          y  :=  Dy - ( Y - CenterY ) * DySc ;

          D := D_IZO * GScale / XMax * (sw.x2-sw.x1+1) / 2.0;

              If (     ( Nr <> NPlOpt )
                   And ( Nr <> NPl0   )
                   And ( Nr <> 10     )
                   And ( Nr <= Max_PL_PPLFLD   )
                   And ( ( NPl0 = 3 ) And ( Nr <> 11 )  ) )  Then
                Begin

                  Mplanet := ( M + 5.0 ) * 10.0 ;

                  If ( Mplanet > MvMaxIzo )   Then
                    MvMaxIzo := Mplanet ;

                  If ( Mplanet < MvMinIzo )   Then
                    MvMinIzo := Mplanet ;

                End ;

        End ;

   ReCalcPlanets := True ;

 End ;


 If ( MvMaxIzo > - 1000 )
   Then
     MvMax := MvMaxIzo / 10.0 - 5.0 + 0.01
   Else
     MvMax := MvMaxParam ;

 If ( MvMinIzo < 1000 )
   Then
     MvMin := MvMinIzo / 10.0 - 5.0 - 0.01
   Else
     MvMin := MvMinParam ;


 ReCalc := True ;

End;





Procedure ResetObjects;
var
 Ind            : integer ;
 dx, dy         : Double  ;
 DxSc, DySc     : Double  ;
Begin

 { ¥à¥¢®¤ ª®®à¤¨­ â ¢ ¨¤¥ «ì­ë¥  }

 With sw Do
   Begin
     Dx := ( x2 - x1 + 1 )  ;
     Dy := ( y2 - y1 + 1 )  ;
     DxSc := XMax / GScale / XOrient / Dx  ;
     DySc := YMax / GScale / YOrient / Dy  ;
   End ;

 For Ind:=0 To numberofstars-1 Do
   With  objectptr [ Ind div objectblocksize ] ^
                   [ Ind mod objectblocksize ]
    Do
      Begin
{
        NRecC := Abs ( NRecC ) ;
}
        x := CenterX + ( 2.0 * x - Dx ) * DxSc ;
        y := CenterY - ( 2.0 * y - Dy ) * DySc ;

      End ;

 FOR Ind := 1 To 16 Do  CatSort [ Ind ] := False ;


        { « ­¥âë }
        { ======= }

 For Ind:=1 To MaxPlanets Do
   If Planet[Ind].Visible Then
     With  Planet[Ind] Do
       Begin
         x := CenterX + ( 2.0 * x - Dx ) * DxSc ;
         y := CenterY - ( 2.0 * y - Dy ) * DySc ;
       End ;

 ReCalc        := False ;
 ReCalcPlanets := False ;

End;  { resetobjects }
